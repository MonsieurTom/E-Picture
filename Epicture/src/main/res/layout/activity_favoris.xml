<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/diverColor">
    <RelativeLayout
        android:id="@+id/activity_favoris_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/activity_favoris_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlank"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/activity_favoris_bar"
        android:id="@+id/activity_favoris_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My favorite medias"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:background="@color/colorBlank"/>
    <ListView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_favoris_listview"
        android:layout_below="@id/activity_favoris_title"
        android:divider="@color/diverColor"
        android:background="@color/colorBlank"
        android:dividerHeight="10dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>